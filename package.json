{
  "name": "light-browser",
  "version": "0.1.0",
  "description": "A lightweight web browser for humans (TUI) and AI agents (MCP)",
  "type": "module",
  "bin": {
    "light-browser": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "tui": "bun run src/index.ts tui",
    "serve": "bun run src/index.ts serve",
    "build": "bun build ./src/index.ts --compile --outfile dist/light-browser --external playwright --external playwright-core",
    "build:darwin-arm64": "bun build ./src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/light-browser-darwin-arm64 --external playwright --external playwright-core",
    "build:darwin-x64": "bun build ./src/index.ts --compile --target=bun-darwin-x64 --outfile dist/light-browser-darwin-x64 --external playwright --external playwright-core",
    "build:linux-arm64": "bun build ./src/index.ts --compile --target=bun-linux-arm64 --outfile dist/light-browser-linux-arm64 --external playwright --external playwright-core",
    "build:linux-x64": "bun build ./src/index.ts --compile --target=bun-linux-x64 --outfile dist/light-browser-linux-x64 --external playwright --external playwright-core",
    "build:windows-x64": "bun build ./src/index.ts --compile --target=bun-windows-x64 --outfile dist/light-browser-windows-x64.exe --external playwright --external playwright-core",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-arm64 && bun run build:linux-x64 && bun run build:windows-x64",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "deadcode": "knip",
    "check": "bun run typecheck && bun run lint && bun run format:check && (bun run deadcode || true)",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/html-to-text": "^9.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.0",
    "@types/sharp": "^0.32.0",
    "@types/terminal-kit": "^2.5.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "knip": "^5.83.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@xenova/transformers": "^2.17.2",
    "cheerio": "^1.2.0",
    "commander": "^14.0.3",
    "html-to-text": "^9.0.5",
    "jsdom": "^28.0.0",
    "pdf-parse": "^2.4.5",
    "playwright": "^1.58.1",
    "sharp": "^0.34.5",
    "terminal-kit": "^3.1.2",
    "yaml": "^2.8.2"
  },
  "overrides": {
    "sharp": "^0.34.5"
  },
  "keywords": [
    "browser",
    "mcp",
    "tui",
    "cli",
    "web",
    "scraper",
    "agent"
  ],
  "license": "MIT"
}